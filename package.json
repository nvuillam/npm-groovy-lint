{
  "name": "npm-groovy-lint",
  "version": "1.2.0-beta.1",
  "description": "NPM CodeNarc wrapper to easily lint Groovy files",
  "main": "index.js",
  "scripts": {
    "debug": "SET JDEPLOY_ROOT_PATH=jdeploy-bundle && node --inspect-brk src/index.js -basedir=\"test\" -rulesetfiles=\"file:test/RuleSet-Base.groovy\" -title=\"TestTitle\" -maxPriority1Violations=0 -report=\"html:test/ReportTestJsDebug.html\"",
    "lint": "eslint **/*.js --ignore-pattern /jdeploy-bundle/* --ignore-pattern /dist/*",
    "lint:fix": "eslint **/*.js --ignore-pattern jdeploy-bundle --ignore-pattern dist --fix && prettier --write \"./src/**/*.{js,jsx,json}\" --tab-width 4 --print-width 150",
    "postinstall": "node jdeploy-bundle/patch-jdeploy-bin.js",
    "prepare-package": "npm uninstall -g npm-groovy-lint --force && node patch-jdeploy-before.js && jdeploy install && node patch-jdeploy-after.js",
    "test-codenarc": "npm run prepare-package && npm-groovy-lint -basedir=\"jdeploy-bundle\" -rulesetfiles=\"file:jdeploy-bundle/test/RuleSet-All.groovy\" -title=\"TestTitle\" -maxPriority1Violations=0 -report=\"html:jdeploy-bundle/test/ReportTestCodeNarc.html\"",
    "test-javascript": "SET JDEPLOY_ROOT_PATH=jdeploy-bundle && node src/index.js -basedir=\"dist/test\" -rulesetfiles=\"file:dist/test/RuleSet-Base.groovy\" -title=\"TestTitle\" -maxPriority1Violations=0 -report=\"html:dist/test/ReportTestJs.html\"",
    "test": "npm run test-codenarc && npm run test-javascript",
    "publish-to-npm": "npm run prepare-package && npm publish",
    "publish-beta-to-npm": "npm run prepare-package && npm publish --tag beta"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nvuillam/npm-groovy-lint.git"
  },
  "keywords": [
    "groovy",
    "lint",
    "jenkinsfile",
    "codenarc",
    "npm",
    "linter",
    "package",
    "wrapper"
  ],
  "author": "Nicolas Vuillamy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nvuillam/npm-groovy-lint/issues"
  },
  "homepage": "https://github.com/nvuillam/npm-groovy-lint#readme",
  "bin": {
    "npm-groovy-lint": "jdeploy-bundle/jdeploy.js"
  },
  "dependencies": {
    "shelljs": "^0.7.5",
    "fs-extra": "^8.1.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jdeploy": "^1.0.21",
    "prettier": "1.19.1"
  },
  "jdeploy": {
    "jar": "dist/CodeNarc-1.4.jar",
    "mainClass": "org.codenarc.CodeNarc",
    "classPath": "lib/groovy-3.0.0/lib/groovy-3.0.0.jar:lib/groovy-3.0.0/lib/groovy-templates-3.0.0.jar:lib/groovy-3.0.0/lib/groovy-xml-3.0.0.jar:lib/slf4j-api-1.7.9.jar:lib/log4j-slf4j-impl-2.13.0.jar:lib/log4j-api-2.13.0.jar:lib/log4j-core-2.13.0.jar:lib/GMetrics-0.7.jar:lib",
    "files": [
      {
        "dir": "dist"
      }
    ]
  },
  "files": [
    "jdeploy-bundle"
  ]
}
